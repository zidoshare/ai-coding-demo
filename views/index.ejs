<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/output.css">
</head>
<body class="min-h-screen bg-slate-950">
  <!-- 背景装饰 -->
  <div class="fixed inset-0 overflow-hidden pointer-events-none">
    <div class="absolute -top-40 -right-40 w-96 h-96 bg-emerald-500/20 rounded-full blur-3xl"></div>
    <div class="absolute top-1/2 -left-40 w-80 h-80 bg-cyan-500/20 rounded-full blur-3xl"></div>
    <div class="absolute -bottom-40 right-1/3 w-72 h-72 bg-violet-500/20 rounded-full blur-3xl"></div>
  </div>

  <!-- 顶部导航 -->
  <nav class="relative z-10 p-4 border-b border-slate-800/50">
    <div class="max-w-7xl mx-auto flex justify-between items-center">
      <div class="flex items-center gap-2">
        <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-cyan-400 rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-900" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-white font-bold text-xl">Vibe Coding</span>
      </div>
      <div class="flex items-center gap-4">
        <span class="text-slate-400 text-sm"><%= user.email %></span>
        <a href="/logout" class="px-4 py-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-all duration-200 text-sm">
          退出
        </a>
      </div>
    </div>
  </nav>

  <div class="relative z-10 flex items-center justify-center min-h-[calc(100vh-73px)] px-4">
    <div class="w-full max-w-2xl">
      <div class="text-center mb-10">
        <h1 class="text-5xl font-bold mb-4">
          <span class="bg-gradient-to-r from-emerald-400 via-cyan-400 to-violet-400 bg-clip-text text-transparent">
            想要创造什么？
          </span>
        </h1>
        <p class="text-slate-400 text-lg">用自然语言描述你的想法，AI 帮你实现</p>
      </div>
      
      <!-- 聊天输入框 -->
      <div class="bg-slate-900/80 backdrop-blur-xl rounded-2xl border border-slate-700/50 shadow-2xl shadow-emerald-500/5 overflow-hidden">
        <form id="promptForm" class="flex flex-col">
          <textarea 
            id="promptInput"
            name="prompt"
            rows="4"
            class="w-full bg-transparent text-slate-100 placeholder-slate-500 px-5 py-4 resize-none outline-none text-lg"
            placeholder="例如：帮我创建一个可以拖拽排序的待办事项应用..."
          ></textarea>
          <div class="flex justify-between items-center px-4 py-3 bg-slate-800/50 border-t border-slate-700/50">
            <span class="text-slate-500 text-sm">Ctrl + Enter 发送</span>
            <button 
              type="submit"
              class="px-5 py-2.5 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-medium rounded-xl hover:from-emerald-400 hover:to-cyan-400 transition-all duration-200 flex items-center gap-2 shadow-lg shadow-emerald-500/25"
            >
              <span>开始创建</span>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
                <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
              </svg>
            </button>
          </div>
        </form>
      </div>
      
      <!-- 快捷提示 -->
      <div class="flex flex-wrap justify-center gap-3 mt-8">
        <button class="prompt-suggestion group px-4 py-2.5 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/50 hover:border-emerald-500/50 rounded-xl text-slate-300 text-sm transition-all duration-200 flex items-center gap-2">
          <span class="w-2 h-2 bg-emerald-400 rounded-full group-hover:animate-pulse"></span>
          待办事项
        </button>
        <button class="prompt-suggestion group px-4 py-2.5 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/50 hover:border-cyan-500/50 rounded-xl text-slate-300 text-sm transition-all duration-200 flex items-center gap-2">
          <span class="w-2 h-2 bg-cyan-400 rounded-full group-hover:animate-pulse"></span>
          计算器
        </button>
        <button class="prompt-suggestion group px-4 py-2.5 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/50 hover:border-violet-500/50 rounded-xl text-slate-300 text-sm transition-all duration-200 flex items-center gap-2">
          <span class="w-2 h-2 bg-violet-400 rounded-full group-hover:animate-pulse"></span>
          天气应用
        </button>
        <button class="prompt-suggestion group px-4 py-2.5 bg-slate-800/50 hover:bg-slate-800 border border-slate-700/50 hover:border-amber-500/50 rounded-xl text-slate-300 text-sm transition-all duration-200 flex items-center gap-2">
          <span class="w-2 h-2 bg-amber-400 rounded-full group-hover:animate-pulse"></span>
          记事本
        </button>
      </div>
    </div>
  </div>

  <script>
    // 点击快捷提示填充输入框
    document.querySelectorAll('.prompt-suggestion').forEach(btn => {
      btn.addEventListener('click', () => {
        const text = btn.textContent.trim();
        document.getElementById('promptInput').value = '帮我创建一个' + text + '应用';
        document.getElementById('promptInput').focus();
      });
    });

    // 表单提交
    document.getElementById('promptForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const prompt = document.getElementById('promptInput').value.trim();
      if (!prompt) return;

      const btn = e.target.querySelector('button[type="submit"]');
      const originalText = btn.innerHTML;
      btn.disabled = true;
      btn.innerHTML = '<span>创建中...</span>';

      try {
        const res = await fetch('/projects', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ prompt })
        });
        const data = await res.json();
        if (data.id) {
          window.location.href = '/projects/' + data.id + '?prompt=' + encodeURIComponent(prompt);
        } else {
          alert(data.error || '创建失败');
          btn.disabled = false;
          btn.innerHTML = originalText;
        }
      } catch (err) {
        alert('网络错误，请重试');
        btn.disabled = false;
        btn.innerHTML = originalText;
      }
    });

    // Ctrl+Enter 提交
    document.getElementById('promptInput').addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && (e.ctrlKey || e.metaKey)) {
        document.getElementById('promptForm').dispatchEvent(new Event('submit'));
      }
    });
  </script>
</body>
</html>
