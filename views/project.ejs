<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= project.id %> - <%= title %></title>
  <link rel="stylesheet" href="/css/output.css">
  <style>
    .chat-messages::-webkit-scrollbar {
      width: 6px;
    }
    .chat-messages::-webkit-scrollbar-track {
      background: transparent;
    }
    .chat-messages::-webkit-scrollbar-thumb {
      background: #334155;
      border-radius: 3px;
    }
  </style>
</head>
<body class="h-screen bg-slate-950 overflow-hidden">
  <!-- 顶部导航 -->
  <nav class="h-14 px-4 border-b border-slate-800/50 flex items-center justify-between">
    <div class="flex items-center gap-4">
      <a href="/" class="flex items-center gap-2 hover:opacity-80 transition">
        <div class="w-8 h-8 bg-gradient-to-br from-emerald-400 to-cyan-400 rounded-lg flex items-center justify-center">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-slate-900" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M12.316 3.051a1 1 0 01.633 1.265l-4 12a1 1 0 11-1.898-.632l4-12a1 1 0 011.265-.633zM5.707 6.293a1 1 0 010 1.414L3.414 10l2.293 2.293a1 1 0 11-1.414 1.414l-3-3a1 1 0 010-1.414l3-3a1 1 0 011.414 0zm8.586 0a1 1 0 011.414 0l3 3a1 1 0 010 1.414l-3 3a1 1 0 11-1.414-1.414L16.586 10l-2.293-2.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </div>
        <span class="text-white font-bold text-xl">Vibe Coding</span>
      </a>
      <span class="text-slate-600">/</span>
      <span class="text-slate-400 text-sm font-mono"><%= project.id %></span>
    </div>
    <div class="flex items-center gap-4">
      <span class="text-slate-400 text-sm"><%= user.email %></span>
      <a href="/logout" class="px-4 py-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition-all duration-200 text-sm">
        退出
      </a>
    </div>
  </nav>

  <!-- 主内容区域 -->
  <main class="h-[calc(100vh-56px)] flex">
    <!-- 左侧聊天区域 -->
    <div class="w-96 border-r border-slate-800/50 flex flex-col bg-slate-900/50">
      <!-- 聊天消息区域 -->
      <div id="chatMessages" class="chat-messages flex-1 overflow-y-auto p-4 space-y-4">
      </div>

      <!-- 输入区域 -->
      <div class="p-4 border-t border-slate-800/50">
        <form id="chatForm" class="flex flex-col gap-3">
          <textarea 
            id="chatInput"
            rows="3"
            class="w-full bg-slate-800/50 text-slate-100 placeholder-slate-500 px-4 py-3 rounded-xl resize-none outline-none border border-slate-700/50 focus:border-emerald-500/50 transition text-sm"
            placeholder="描述你想要的功能..."
          ></textarea>
          <button 
            type="submit"
            class="w-full py-2.5 bg-gradient-to-r from-emerald-500 to-cyan-500 text-white font-medium rounded-xl hover:from-emerald-400 hover:to-cyan-400 transition-all duration-200 flex items-center justify-center gap-2 text-sm"
          >
            <span>发送</span>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
              <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
            </svg>
          </button>
        </form>
      </div>
    </div>

    <!-- 右侧预览区域 -->
    <div class="flex-1 flex flex-col bg-slate-950">
      <!-- 预览顶栏 -->
      <div class="h-12 px-4 border-b border-slate-800/50 flex items-center justify-between">
        <div class="flex items-center gap-2">
          <div class="flex gap-1.5">
            <span class="w-3 h-3 rounded-full bg-red-500/80"></span>
            <span class="w-3 h-3 rounded-full bg-yellow-500/80"></span>
            <span class="w-3 h-3 rounded-full bg-green-500/80"></span>
          </div>
          <span class="ml-3 text-slate-500 text-sm font-mono"><%= project.id %>.<%= hostDomain %><%= port != 80 ? ':' + port : '' %></span>
        </div>
        <button 
          id="refreshBtn"
          class="p-2 text-slate-400 hover:text-white hover:bg-slate-800 rounded-lg transition"
          title="刷新预览"
        >
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4 2a1 1 0 011 1v2.101a7.002 7.002 0 0111.601 2.566 1 1 0 11-1.885.666A5.002 5.002 0 005.999 7H9a1 1 0 010 2H4a1 1 0 01-1-1V3a1 1 0 011-1zm.008 9.057a1 1 0 011.276.61A5.002 5.002 0 0014.001 13H11a1 1 0 110-2h5a1 1 0 011 1v5a1 1 0 11-2 0v-2.101a7.002 7.002 0 01-11.601-2.566 1 1 0 01.61-1.276z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
      
      <!-- iframe 预览 -->
      <div class="flex-1 bg-white">
        <iframe 
          id="previewFrame"
          src="http://<%= project.id %>.<%= hostDomain %><%= port != 80 ? ':' + port : '' %>"
          class="w-full h-full border-0"
        ></iframe>
      </div>
    </div>
  </main>

  <script>
    const projectId = '<%= project.id %>';
    const chatMessages = document.getElementById('chatMessages');
    const chatForm = document.getElementById('chatForm');
    const chatInput = document.getElementById('chatInput');
    const refreshBtn = document.getElementById('refreshBtn');
    const previewFrame = document.getElementById('previewFrame');
    const submitBtn = chatForm.querySelector('button[type="submit"]');

    // 对话历史
    let messages = [];
    let isStreaming = false;

    // 添加消息到聊天区域
    function addMessage(content, isUser = false, isStreaming = false) {
      const messageDiv = document.createElement('div');
      messageDiv.className = 'flex gap-3';
      const messageId = 'msg-' + Date.now();
      messageDiv.id = messageId;
      
      if (isUser) {
        messageDiv.innerHTML = `
          <div class="w-8 h-8 rounded-lg bg-slate-700 flex items-center justify-center flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-300" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1">
            <div class="text-sm text-slate-400 mb-1">你</div>
            <div class="text-slate-200 text-sm leading-relaxed whitespace-pre-wrap">${escapeHtml(content)}</div>
          </div>
        `;
      } else {
        messageDiv.innerHTML = `
          <div class="w-8 h-8 rounded-lg bg-gradient-to-br from-emerald-400 to-cyan-400 flex items-center justify-center flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-slate-900" viewBox="0 0 20 20" fill="currentColor">
              <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3zM6 8a2 2 0 11-4 0 2 2 0 014 0zM16 18v-3a5.972 5.972 0 00-.75-2.906A3.005 3.005 0 0119 15v3h-3zM4.75 12.094A5.973 5.973 0 004 15v3H1v-3a3 3 0 013.75-2.906z" />
            </svg>
          </div>
          <div class="flex-1">
            <div class="text-sm text-slate-400 mb-1">AI Assistant</div>
            <div class="message-content text-slate-200 text-sm leading-relaxed whitespace-pre-wrap">${content}${isStreaming ? '<span class="typing-cursor">|</span>' : ''}</div>
          </div>
        `;
      }
      
      chatMessages.appendChild(messageDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
      return messageId;
    }

    // 更新流式消息
    function updateStreamingMessage(messageId, content, isDone = false) {
      const messageDiv = document.getElementById(messageId);
      if (messageDiv) {
        const contentDiv = messageDiv.querySelector('.message-content');
        if (contentDiv) {
          contentDiv.innerHTML = content + (isDone ? '' : '<span class="typing-cursor animate-pulse">|</span>');
        }
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }
    }

    // 存储工具调用的 DOM 元素和名称
    const toolCallElements = new Map();

    // 添加工具调用提示（正在执行）
    function addToolCall(toolCallId, toolName, args) {
      const toolDiv = document.createElement('div');
      toolDiv.className = 'flex gap-3 opacity-70 tool-item';
      const filePath = args?.path || args?.filePath || '';
      toolDiv.innerHTML = `
        <div class="tool-icon w-8 h-8 rounded-lg bg-slate-700 flex items-center justify-center flex-shrink-0">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-yellow-400 animate-spin" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <path d="M12 2v4m0 12v4m10-10h-4M6 12H2m15.07-7.07l-2.83 2.83M9.76 14.24l-2.83 2.83m12.02 0l-2.83-2.83M9.76 9.76L6.93 6.93"/>
          </svg>
        </div>
        <div class="flex-1">
          <div class="text-xs text-yellow-400 font-mono bg-slate-800/50 rounded px-2 py-1 inline-block tool-status">
            执行中: ${toolName}${filePath ? ' (' + filePath + ')' : ''}
          </div>
        </div>
      `;
      chatMessages.appendChild(toolDiv);
      chatMessages.scrollTop = chatMessages.scrollHeight;
      // 存储元素和工具名
      toolCallElements.set(toolCallId, { element: toolDiv, toolName: toolName });
    }

    // 更新工具调用状态（执行完成）
    function addToolResult(data) {
      const toolCallId = data.toolCallId;
      const stored = toolCallElements.get(toolCallId);
      
      console.log('addToolResult:', { toolCallId, tool: data.tool, found: !!stored, keys: Array.from(toolCallElements.keys()) });
      
      if (stored) {
        const { element: toolDiv, toolName } = stored;
        // 更新已有的元素
        const iconDiv = toolDiv.querySelector('.tool-icon');
        const statusDiv = toolDiv.querySelector('.tool-status');
        
        iconDiv.innerHTML = `
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
          </svg>
        `;
        statusDiv.className = 'text-xs text-emerald-400 font-mono bg-slate-800/50 rounded px-2 py-1 inline-block tool-status';
        statusDiv.textContent = `完成: ${data.tool || toolName}`;
        
        toolCallElements.delete(toolCallId);
      } else {
        // 如果没找到对应的执行中元素，创建新的
        const newDiv = document.createElement('div');
        newDiv.className = 'flex gap-3 opacity-70 tool-item';
        newDiv.innerHTML = `
          <div class="tool-icon w-8 h-8 rounded-lg bg-slate-700 flex items-center justify-center flex-shrink-0">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-emerald-400" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
            </svg>
          </div>
          <div class="flex-1">
            <div class="text-xs text-emerald-400 font-mono bg-slate-800/50 rounded px-2 py-1 inline-block">
              完成: ${data.tool || '工具'}
            </div>
          </div>
        `;
        chatMessages.appendChild(newDiv);
        chatMessages.scrollTop = chatMessages.scrollHeight;
      }
    }

    // HTML 转义
    function escapeHtml(text) {
      const div = document.createElement('div');
      div.textContent = text;
      return div.innerHTML;
    }

    // 设置按钮状态
    function setLoading(loading) {
      isStreaming = loading;
      submitBtn.disabled = loading;
      chatInput.disabled = loading;
      if (loading) {
        submitBtn.innerHTML = `
          <svg class="animate-spin h-4 w-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
            <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
            <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
          </svg>
          <span>生成中...</span>
        `;
      } else {
        submitBtn.innerHTML = `
          <span>发送</span>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" viewBox="0 0 20 20" fill="currentColor">
            <path d="M10.894 2.553a1 1 0 00-1.788 0l-7 14a1 1 0 001.169 1.409l5-1.429A1 1 0 009 15.571V11a1 1 0 112 0v4.571a1 1 0 00.725.962l5 1.428a1 1 0 001.17-1.408l-7-14z" />
          </svg>
        `;
      }
    }

    // 发送消息并处理 SSE 响应
    async function sendMessage(userMessage) {
      // 添加用户消息到历史
      messages.push({ role: 'user', content: userMessage });
      addMessage(userMessage, true);
      
      setLoading(true);
      
      // 创建 AI 消息占位
      const aiMessageId = addMessage('', false, true);
      let aiContent = '';

      try {
        const response = await fetch(`/api/chat/${projectId}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ messages })
        });

        const reader = response.body.getReader();
        const decoder = new TextDecoder();
        let buffer = ''; // 缓冲区处理跨 chunk 的消息

        while (true) {
          const { done, value } = await reader.read();
          if (done) break;

          buffer += decoder.decode(value, { stream: true });
          const lines = buffer.split('\n');
          
          // 保留最后一个可能不完整的行
          buffer = lines.pop() || '';

          for (const line of lines) {
            if (line.startsWith('data: ')) {
              try {
                const data = JSON.parse(line.slice(6));
                console.log('SSE received:', data.type, data);
                
                if (data.type === 'text' && data.content) {
                  aiContent += data.content;
                  updateStreamingMessage(aiMessageId, escapeHtml(aiContent));
                } else if (data.type === 'tool-call') {
                  // 显示工具调用中
                  addToolCall(data.toolCallId, data.tool, data.args);
                } else if (data.type === 'tool-result') {
                  addToolResult(data);
                  // 工具执行后刷新预览
                  previewFrame.src = previewFrame.src;
                } else if (data.type === 'done') {
                  updateStreamingMessage(aiMessageId, escapeHtml(aiContent), true);
                  // 添加 AI 回复到历史
                  if (aiContent) {
                    messages.push({ role: 'assistant', content: aiContent });
                  }
                } else if (data.type === 'error') {
                  updateStreamingMessage(aiMessageId, `错误: ${data.message}`, true);
                }
              } catch (e) {
                // 忽略解析错误
              }
            }
          }
        }
      } catch (error) {
        updateStreamingMessage(aiMessageId, `请求失败: ${error.message}`, true);
      } finally {
        setLoading(false);
      }
    }

    // 发送消息
    chatForm.addEventListener('submit', async (e) => {
      e.preventDefault();
      const message = chatInput.value.trim();
      if (!message || isStreaming) return;

      chatInput.value = '';
      await sendMessage(message);
    });

    // Ctrl+Enter 发送
    chatInput.addEventListener('keydown', (e) => {
      if (e.key === 'Enter' && (e.ctrlKey || e.metaKey)) {
        chatForm.dispatchEvent(new Event('submit'));
      }
    });

    // 刷新预览
    refreshBtn.addEventListener('click', () => {
      previewFrame.src = previewFrame.src;
    });

    // 页面加载时检查 URL 参数中的初始 prompt
    (function() {
      const urlParams = new URLSearchParams(window.location.search);
      const initialPrompt = urlParams.get('prompt');
      if (initialPrompt) {
        // 清除 URL 参数，避免刷新时重复发送
        window.history.replaceState({}, '', window.location.pathname);
        // 发送初始 prompt
        sendMessage(initialPrompt);
      }
    })();
  </script>
</body>
</html>
